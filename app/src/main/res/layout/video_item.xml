<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/videoItem_imageView_preview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/avatar"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/videoItem_textView_Name"
        android:layout_alignTop="@+id/videoItem_imageView_preview"
        android:layout_toRightOf="@+id/videoItem_imageView_preview"
        android:layout_toEndOf="@+id/videoItem_imageView_preview"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/videoItem_textView_time"
        android:layout_below="@+id/videoItem_textView_Name"
        android:layout_alignLeft="@+id/videoItem_textView_Name"
        android:layout_alignStart="@+id/videoItem_textView_Name"
        android:layout_marginTop="10dp" />

</RelativeLayout>