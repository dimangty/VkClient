<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/dialogItem_imageView_avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/avatar"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/dialogItem_textView_Name"
        android:layout_alignTop="@+id/dialogItem_imageView_avatar"
        android:layout_toRightOf="@+id/dialogItem_imageView_avatar"
        android:layout_toEndOf="@+id/dialogItem_imageView_avatar"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/dialogItem_textView_message"
        android:layout_below="@+id/dialogItem_textView_Name"
        android:layout_alignLeft="@+id/dialogItem_textView_Name"
        android:layout_alignStart="@+id/dialogItem_textView_Name"
        android:layout_marginTop="5dp" />
</RelativeLayout>